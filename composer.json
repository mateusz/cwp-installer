{
    "name": "cwp/cwp-installer",
    "type": "silverstripe-recipe",
    "description": "CWP Project Template",
    "license": "BSD-3-Clause",
    "require": {
        "php": ">=7.1.0",
        "silverstripe/recipe-plugin": "^1",
        "cwp/cwp-recipe-core": "2.8.x-dev",
        "cwp/cwp-recipe-cms": "2.8.x-dev",
        "silverstripe/recipe-blog": "1.8.x-dev",
        "silverstripe/recipe-form-building": "1.8.x-dev",
        "silverstripe/recipe-authoring-tools": "1.8.x-dev",
        "silverstripe/recipe-collaboration": "1.8.x-dev",
        "silverstripe/recipe-reporting-tools": "1.8.x-dev",
        "cwp/cwp-recipe-search": "2.8.x-dev",
        "silverstripe/recipe-services": "1.8.x-dev",
        "tractorcow/silverstripe-fluent": "4.5.x-dev",
        "silverstripe/registry": "2.3.x-dev",
        "cwp/starter-theme": "3.2.x-dev",
        "silverstripe/mfa": "4.3.x-dev",
        "silverstripe/totp-authenticator": "4.1.x-dev",
        "silverstripeltd/platform-yml-builder": "^1"
    },
    "suggest": {
        "silverstripe/recipe-content-blocks": "Supplement the CMS with a 'content block' approach to editing"
    },
    "require-dev": {
        "sminnee/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^3"
    },
    "extra": {
        "project-files": [
            "app/*"
        ],
        "project-files-installed": [
            "app/.htaccess",
            "app/_config.php",
            "app/_config/blog.yml",
            "app/_config/environmentcheck.yml",
            "app/_config/mimevalidator.yml",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "web.config"
        ]
    },
    "config": {
        "process-timeout": 600,
        "secure-http": false
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:silverstripeltd/paas-platform-yml-compiler.git"
        }
    ],
    "scripts": {
        "cloud-build": "echo 'Hello from composer cloud-build script'"
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
